<h1 class="text-center mt-4">Create A New Category</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %> 
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="input-group row">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
            </div>
        </div>
        <div class="input-group justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg my-3" %>
        </div>
      <% end %>
    </div>

    <%= link_to "[ Cancel and return to articles list ]", articles_path, class: "text-center text-info" %>
  </div>
</div>